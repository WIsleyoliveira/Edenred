{
  "name": "comments",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["landscapeId", "userId", "userName", "content", "createdAt"],
        "properties": {
          "landscapeId": {
            "bsonType": "string",
            "description": "ID da paisagem comentada"
          },
          "userId": {
            "bsonType": "string",
            "description": "ID do usuário que comentou"
          },
          "userName": {
            "bsonType": "string",
            "description": "Nome do usuário"
          },
          "content": {
            "bsonType": "string",
            "minLength": 1,
            "maxLength": 500,
            "description": "Conteúdo do comentário"
          },
          "rating": {
            "bsonType": "int",
            "minimum": 1,
            "maximum": 5,
            "description": "Avaliação de 1 a 5 estrelas"
          },
          "approved": {
            "bsonType": "bool",
            "description": "Se o comentário foi aprovado"
          },
          "likes": {
            "bsonType": "int",
            "minimum": 0,
            "description": "Curtidas no comentário"
          },
          "createdAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de criação"
          },
          "updatedAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Data de atualização"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}